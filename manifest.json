{
  "manifest_version": 3,
  "name": "一键导出所有微博评论信息",
  "version": "1.0",
  "description": "【完全免费💥】一键导出任意💓微博💓下面的所有评论内容(性别、IP地址、粉丝牌),上手即用！",
  "permissions": [
    "downloads",
    "storage",
    "scripting",
    "activeTab",
    "cookies"
  ],
  "host_permissions": [
    "https://weibo.com/*"
  ],
  "background": {
    "service_worker": "background.js"
  },
  "action": {
    "default_popup": "popup.html",
    "default_icon": {
      "48": "icons/icon48.png",
      "128": "icons/icon128.png"
    }
  },
  "content_scripts": [
    {
      "matches": ["https://weibo.com/*"],
      "js": ["libs/crypto-js.min.js", "content.js"],
      "css": ["style.css"]
    }
  ]
}
