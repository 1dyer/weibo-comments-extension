{
  "manifest_version": 3,
  "name": "微博评论爬取工具",
  "version": "1.0",
  "description": "支持爬取微博评论并导出为CSV文件",
  "permissions": [
    "downloads",
    "storage",
    "scripting",
    "activeTab",
    "cookies"
  ],
  "host_permissions": [
    "https://weibo.com/*"
  ],
  "background": {
    "service_worker": "background.js"
  },
  "action": {
    "default_popup": "popup.html",
    "default_icon": {
      "48": "icons/icon48.png",
      "128": "icons/icon128.png"
    }
  },
  "content_scripts": [
    {
      "matches": ["https://weibo.com/*"],
      "js": ["libs/crypto-js.min.js", "content.js"],
      "css": ["style.css"]
    }
  ]
}
